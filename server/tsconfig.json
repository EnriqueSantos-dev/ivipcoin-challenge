{
	"compilerOptions": {
		"target": "ES2020",
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "./dist",
		"allowJs": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"removeComments": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictPropertyInitialization": false,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "types/**/*.d.ts"],
	"exclude": ["node_modules", "dist"]
}
